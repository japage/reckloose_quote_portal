<%= simple_form_for(@question) do |f| %>
  <%= f.error_notification %>

  <div class="inputs">
    <%= f.input :name %>
  </div>

<%= f.fields_for :answers do |builder| %>
  <%= render 'answer_fields', f: builder %>
<% end %>

<%= link_to_add_fields "Add Answer", f, :answers %>

  <div class="actions">
    <%= f.button :submit %>
  </div>
<% end %>
