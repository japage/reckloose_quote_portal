<h1>Listing quotes</h1>

<table>
  <thead>
    <tr>
      <th>Quote ID</th>
      <th>User ID</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @quotes.each do |quote| %><!-- Can only be quotes associated with the current user_id -->
      <tr>
        <td><%= quote.id %></td>
        <td><!-- Need link to user associated with quote here --></td>
        <td><%= link_to 'Show', quote %></td>
        <td><%= link_to 'Edit', edit_quote_path(quote) %></td>
        <td><%= link_to 'Destroy', quote, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Quote', new_quote_path %>
